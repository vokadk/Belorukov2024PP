<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Belorukov2024PP.MainPage"
             Background="#dcf3fc">
    <ScrollView>
        <StackLayout>
            <Label Text="Авторизация" HorizontalOptions="Center" TextColor="Black" FontSize="28" Margin="40"/>
        <Entry x:Name="Login" Placeholder="Введите логин" TextColor="Black" PlaceholderColor="black" Margin=" 20"/>
            <Entry x:Name="Password" Placeholder="Введите пароль" TextColor="Black" PlaceholderColor="Black" Margin="20"/>
            <Button Margin="20" CornerRadius="15" BackgroundColor="#19baff"
                Text="Авторизоваться" TextColor="Black"
                x:Name="Avtor" Clicked="Avtor_Clicked">
        </Button>
        <Button Margin="20" CornerRadius="15" BackgroundColor="#19baff"
                Text="Зарегистрироваться" TextColor="Black"
                x:Name="Reg" Clicked="Reg_Clicked"/>

        <Button Margin="20" CornerRadius="15" BackgroundColor="#19baff"
                Text="Выйти из приложения" TextColor="Black"
                x:Name="Exit" Clicked="Exit_Clicked"/>
       
    </StackLayout>
        </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Belorukov2024PP.Registracia"
             Background="#dcf3fc">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame BackgroundColor="#19baff" Padding="24" CornerRadius="0">
                    <Label Text="Регистрация" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                </Frame>
                <Entry x:Name="Name" Placeholder="Введите имя" TextColor="Black" PlaceholderColor="black" Margin=" 25"/>
                <Entry x:Name="Login" Placeholder="Введите логин" TextColor="Black" PlaceholderColor="black" Margin=" 25"/>
                <Entry x:Name="Password" Placeholder="Введите пароль" TextColor="Black" PlaceholderColor="Black" Margin="25"/>
                <Button Margin="20" CornerRadius="15" BackgroundColor="#19baff"
     Text="Зарегистрироваться" TextColor="Black"
     x:Name="Reg" Clicked="Reg_Clicked"/>
                <Button Margin="20" CornerRadius="15" BackgroundColor="#19baff"
     Text="Вернуться назад" TextColor="Black"
     x:Name="Back" Clicked="Back_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>